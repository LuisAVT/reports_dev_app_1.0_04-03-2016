<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:clickable="true">
    <!--android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="escobedo.jnix.escobedo.mainActivity"
    -->


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true">
        <ImageView
            android:layout_width="80dp"
            android:layout_height="100dp"
            android:id="@+id/imageView2"
            android:background="@drawable/escudodearmas"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:alpha=".2"
            android:visibility="invisible"
            android:contentDescription="@string/fondo" />


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView3"
            android:background="@drawable/escudodearmas"
            android:alpha=".2"
            android:layout_above="@+id/imageView2"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="35dp"
            android:layout_marginStart="38dp"
            android:layout_marginBottom="87dp"
            android:visibility="invisible"
            android:contentDescription="@string/fondo"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView4"
            android:background="@drawable/escudodearmas"
            android:alpha=".2"
            android:layout_below="@+id/imageView2"
            android:layout_toRightOf="@+id/imageView2"
            android:layout_toEndOf="@+id/imageView2"
            android:layout_marginLeft="38dp"
            android:layout_marginStart="38dp"
            android:layout_marginTop="74dp"
            android:visibility="invisible"
            android:contentDescription="@string/fondo"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView5"
            android:layout_alignBottom="@+id/imageView4"
            android:layout_alignLeft="@+id/imageView3"
            android:layout_alignStart="@+id/imageView3"
            android:alpha=".2"
            android:background="@drawable/escudodearmas"
            android:visibility="invisible"
            android:contentDescription="@string/fondo"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView6"
            android:background="@drawable/escudodearmas"
            android:alpha=".2"
            android:layout_alignTop="@+id/imageView3"
            android:layout_alignLeft="@+id/imageView4"
            android:layout_alignStart="@+id/imageView4"
            android:visibility="invisible"
            android:contentDescription="@string/fondo"/>

        <ImageButton
            android:onClick="imagen"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/imageButton"
            android:background="@drawable/newss"
            android:layout_above="@+id/imageView2"
            android:layout_alignRight="@+id/imageView3"
            android:layout_alignEnd="@+id/imageView3"
            android:contentDescription="@string/noticias"/>

        <ImageButton
            android:onClick="imagen"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/imageButton2"
            android:background="@drawable/businesss"
            android:layout_above="@+id/imageView2"
            android:layout_alignLeft="@+id/imageView2"
            android:layout_alignStart="@+id/imageView2"
            android:contentDescription="@string/denu"/>

        <ImageButton
            android:onClick="imagen"
            android:layout_width="80dp"
            android:layout_height="60dp"
            android:id="@+id/imageButton3"
            android:background="@drawable/ccamera"
            android:layout_above="@+id/imageView2"
            android:layout_alignLeft="@+id/imageView6"
            android:layout_alignStart="@+id/imageView6"
            android:contentDescription="@string/reports"/>

        <ImageButton
            android:onClick="imagen"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/imageButton4"
            android:background="@drawable/alert"
            android:layout_above="@+id/imageView5"
            android:layout_alignLeft="@+id/imageButton"
            android:layout_alignStart="@+id/imageButton"
            android:layout_marginBottom="40dp"
            android:contentDescription="@string/panic"
            android:focusable="true"
            android:clickable="true"
            android:focusableInTouchMode="true"
            android:contextClickable="true" />

        <ImageButton
            android:onClick="imagen"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/imageButton5"
            android:background="@drawable/information"
            android:layout_alignTop="@+id/imageButton4"
            android:layout_alignLeft="@+id/imageView2"
            android:layout_alignStart="@+id/imageView2" />

        <ImageButton
            android:onClick="imagen"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/imageButton6"
            android:background="@drawable/mapicon"
            android:contentDescription="@string/panic"
            android:layout_above="@+id/txtViewMap"
            android:layout_alignLeft="@+id/imageView4"
            android:layout_alignStart="@+id/imageView4" />

        <ImageButton
            android:onClick="imagen"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/imageButton7"
            android:background="@drawable/calendar"
            android:contentDescription="@string/events"
            android:layout_marginTop="15dp"
            android:layout_alignTop="@+id/imageView5"
            android:layout_alignRight="@+id/imageView5"
            android:layout_alignEnd="@+id/imageView5" />

        <ImageButton
            android:onClick="imagen"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/imageButton8"
            android:background="@drawable/networks"
            android:contentDescription="@string/red"
            android:layout_alignTop="@+id/imageButton7"
            android:layout_toLeftOf="@+id/imageView4"
            android:layout_toStartOf="@+id/imageView4" />

        <ImageButton
            android:onClick="imagen"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/imageButton9"
            android:background="@drawable/eemail"
            android:contentDescription="@string/contacts"
            android:layout_alignTop="@+id/imageButton7"
            android:layout_alignLeft="@+id/imageButton6"
            android:layout_alignStart="@+id/imageButton6"
            android:layout_marginTop="5dp"/>

        <TextView
            android:text="@string/noticias"
            android:id="@+id/txtViewNews"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:layout_below="@+id/imageButton"
            android:layout_alignLeft="@+id/imageView3"
            android:layout_alignStart="@+id/imageView3"
            android:layout_marginTop="0dp" />

        <TextView
            android:text="@string/denu"
            android:id="@+id/txtViewDenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:layout_below="@+id/imageButton2"
            android:layout_alignLeft="@+id/imageView2"
            android:layout_alignStart="@+id/imageView2" />

        <TextView
            android:text="@string/reports"
            android:id="@+id/txtViewReports"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:layout_alignTop="@+id/imageView2"
            android:layout_alignRight="@+id/imageButton3"
            android:layout_alignEnd="@+id/imageButton3"
            android:layout_marginRight="8dp"/>

        <TextView
            android:text="@string/emergency"
            android:id="@+id/txtViewPanic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:layout_below="@+id/imageButton5"
            android:layout_alignLeft="@+id/imageButton4"
            android:layout_alignStart="@+id/imageButton4"
            android:layout_marginLeft="10dp" />

        <TextView
            android:text="@string/Info"
            android:id="@+id/txtViewEmergency"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:layout_below="@+id/imageButton5"
            android:layout_centerHorizontal="true" />

        <TextView
            android:text="@string/events"
            android:id="@+id/txtViewCal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:layout_below="@+id/imageButton7"
            android:layout_alignRight="@+id/txtViewNews"
            android:layout_alignEnd="@+id/txtViewNews" />

        <TextView
            android:text="@string/red"
            android:id="@+id/txtViewNetWork"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:layout_alignTop="@+id/txtViewCal"
            android:layout_centerHorizontal="true" />

        <TextView
            android:text="@string/map"
            android:id="@+id/txtViewMap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:layout_below="@+id/imageButton5"
            android:layout_alignLeft="@+id/txtViewReports"
            android:layout_alignStart="@+id/txtViewReports" />




        <TextView
            android:text="@string/contacts"
            android:id="@+id/txtViewContacts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:layout_alignBaseline="@+id/txtViewNetWork"
            android:layout_alignBottom="@+id/txtViewNetWork"
            android:layout_alignRight="@+id/txtViewReports"
            android:layout_alignEnd="@+id/txtViewReports" />




    </RelativeLayout>

    <TextView
        android:text="@string/hello2"
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="#FFD63838"/>

    <TextView
        android:text="@string/hello1"
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:background="#FFD63838"/>






</android.support.v4.widget.DrawerLayout>
